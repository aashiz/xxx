<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dialog_padding_top"
    android:paddingBottom="@dimen/dialog_padding_bottom"
    android:paddingLeft="@dimen/dialog_padding_side_left"
    android:paddingRight="@dimen/dialog_padding_side_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" />

        <TextView
            android:text="Updating....."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/update"
            android:textAlignment="inherit"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/progressBar2"
            android:layout_toEndOf="@+id/progressBar2"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginLeft="@dimen/dialog_margin"/>
    </RelativeLayout>

</LinearLayout>
